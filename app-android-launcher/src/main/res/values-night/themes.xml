<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="UmTheme.App.OnBoarding" parent="UmTheme.App.Splash"/>

    <style name="UmTheme.App.Splash" parent="UmTheme.MaterialComponents">
        <item name="colorPrimary">@color/navigationBarColor</item>
        <item name="colorPrimaryVariant">@color/navigationBarColor</item>
        <item name="colorSecondary">@color/navigationBarColor</item>
        <item name="colorSecondaryVariant">@color/navigationBarColor</item>
        <item name="android:colorBackground">@color/navigationBarColor</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?colorOnBackground</item>
    </style>

    <style name="UmTheme.App" parent="UmTheme.MaterialComponents">

        <!--Material color attributes (Night Mode) as per https://material.io/design/color/dark-theme.html#anatomy-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorPrimaryDark">@color/primaryVariantColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="android:colorBackground">@color/navigationBarColor</item>
        <item name="colorSurface">@color/onBackgroundColor</item>
        <item name="colorError">@color/errorLightColor</item>
        <item name="colorOnPrimary">@color/surfaceColor</item>
        <item name="colorOnSecondary">@color/surfaceColor</item>
        <item name="colorOnBackground">@color/backgroundColor</item>
        <item name="colorOnSurface">@color/surfaceColor</item>
        <item name="colorOnSecondaryText">?colorOnSurface</item>
        <item name="colorOnError">@color/navigationBarColor</item>
        <item name="colorOnIconTint">?colorOnSurface</item>
        <item name="colorOnTintPrimary">?colorOnSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/navigationBarColor</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="colorTabIndicator">@color/primaryColor</item>
        <item name="colorTabText" >@color/iconTintColor</item>
        <item name="colorSelectedTabText">@color/primaryColor</item>
        <item name="colorOnOrganisationText">@color/primaryLightVariantColor</item>
        <item name="colorPrimaryBackground">@android:color/transparent</item>
        <item name="colorPrimarySurface">?colorSurface</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?colorSurface</item>
        <item name="toolbarStyle">@style/UmTheme.Widget.Toolbar</item>
    </style>

    <!--Toolbar-->
    <style name="UmTheme.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:elevation" >@dimen/dimen_4dp</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

</resources>

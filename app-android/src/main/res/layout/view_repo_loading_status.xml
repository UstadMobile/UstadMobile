<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/statusViewImageInner"
        android:layout_width="@dimen/layout_dimen_80dp"
        android:layout_height="@dimen/layout_dimen_80dp"
        android:layout_centerInParent="true"
        android:tint="?colorOnIconTint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/statusViewImage"
        android:layout_width="@dimen/layout_dimen_80dp"
        android:layout_height="@dimen/layout_dimen_80dp"
        android:layout_centerInParent="true"
        android:tint="?colorOnIconTint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/statusViewProgress"
        android:layout_width="@dimen/layout_dimen_300dp"
        android:layout_height="@dimen/layout_dimen_300dp"
        android:layout_centerInParent="true"
        android:tint="?colorOnIconTint"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminateDrawable="@drawable/progress_drawable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:textAppearance="@style/UmTheme.TextAppearance.Body2"
        android:id="@+id/statusViewTextInner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusViewImageInner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusViewImageInner" />

    <TextView
        android:textAppearance="@style/UmTheme.TextAppearance.Body1"
        android:id="@+id/statusViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusViewImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusViewImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
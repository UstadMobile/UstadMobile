<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="com.ustadmobile.core.controller.PersonGroupListItemListener" />

        <variable
            name="personGroup"
            type="com.ustadmobile.lib.db.entities.PersonGroupWithMemberCount" />

        <variable
            name="selectablePagedListAdapter"
            type="com.ustadmobile.port.android.view.PersonGroupListRecyclerAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectableViewHelper="@{selectablePagedListAdapter}"
        app:onSelectedStateChanged="@{(view) -> selectablePagedListAdapter.onItemSelectedChanged(view, personGroup)}"
        app:onSelectableItemClicked="@{() -> listener.onClickGroup(personGroup)}"
        android:background="?attr/selectableItemBackground"
        >

        <!-- TODO: Change or remove this icon -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_persongroup_newitemicon"
            app:srcCompat="@drawable/ic_group_black_24dp"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:tint="?colorOnIconTint"
            android:layout_margin="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- Line 1-->
        <TextView
            android:textAppearance="@style/UmTheme.TextAppearance.Body1"
            android:id="@+id/item_persongroup_line1_text"
            android:text="@{personGroup.groupName}"
            tools:text="Group A"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_persongroup_newitemicon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            />

        <!-- Line 2-->
        <TextView
            android:textAppearance="@style/UmTheme.TextAppearance.Body2"
            android:id="@+id/item_persongroup_line2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Placeholder"
            android:text="@{`` + personGroup.memberCount}"
            app:layout_constraintStart_toStartOf="@+id/item_persongroup_line1_text"
            app:layout_constraintTop_toBottomOf="@+id/item_persongroup_line1_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
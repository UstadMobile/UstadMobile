<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="schedule"
            type="com.ustadmobile.lib.db.entities.Schedule" />

        <variable
            name="mPresenter"
            type="com.ustadmobile.core.controller.ClazzEdit2Presenter" />

        <variable
            name="mActivity"
            type="com.ustadmobile.port.android.view.ClazzEdit2ActivityEventHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> mActivity.showEditScheduleDialog(schedule)}"
        android:background="?attr/selectableItemBackground"
        >

        <!-- Line 1-->
        <TextView
            android:id="@+id/item_schedule_line1_text"
            app:scheduleText="@{schedule}"
            tools:text="Schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/list_twoline1_margin_text_start"
            android:layout_marginTop="@dimen/list_twoline1_margin_vertical"
            android:layout_marginBottom="@dimen/list_twoline1_margin_vertical"
            android:layout_marginEnd="@dimen/list_twoline1_margin_horizontal"
            android:textSize="@dimen/list_twoline1_textsize_line1"
            android:textColor="@color/text_primary"
            />

        <!-- Line 2-->
        <TextView
            android:id="@+id/item_schedule_line2_text"
            tools:text="Line two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/item_schedule_line1_text"
            app:layout_constraintTop_toBottomOf="@+id/item_schedule_line1_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/list_twoline1_margin_vertical" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_schedule_secondary_menu_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_twoline1_padding_secondactionimagebutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            app:tint="@color/secondary_text"
            android:contentDescription="@string/edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{() -> mPresenter.handleRemoveSchedule(schedule)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
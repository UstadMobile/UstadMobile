<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="android.text.InputType" />

        <variable
            name="saleItem"
            type="com.ustadmobile.lib.db.entities.SaleItemWithProduct" />

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="fieldsEnabled"
            type="boolean" />

        <variable
            name="activityEventHandler"
            type="com.ustadmobile.port.android.view.SaleItemEditFragmentEventHandler" />

    </data>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_sale_item_edit_edit_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_sale_item_edit_edit_clx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/fragment_sale_item_edit_product_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/fragment_sale_item_edit_product_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Pink Hat (20 in stock)"
                app:productNameWithCount = "@{saleItem}"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/dimen_30dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_item_edit_product_iv"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/TextAppearance.AppCompat.Body1"
                />


            <LinearLayout
                android:id="@+id/fragment_sale_item_edit_quatity_and_price_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:layout_marginHorizontal="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_item_edit_product_tv"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragment_sale_item_edit_quantity_til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"

                    android:hint="@string/quantity">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragment_sale_item_edit_quantity_tiet"
                        android:text="@={`` + saleItem.saleItemQuantity}"
                        app:runOnClickWhenFocused="@{true}"
                        android:inputType="@{InputType.TYPE_CLASS_NUMBER}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragment_sale_item_edit_priceeach_til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="@dimen/dimen_8dp"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:hint="@string/price_each">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragment_sale_item_edit_priceeach_tiet"
                        android:text="@={`` + saleItem.saleItemPricePerPiece}"
                        app:runOnClickWhenFocused="@{true}"
                        android:inputType="@{InputType.TYPE_CLASS_NUMBER}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_sale_item_edit_total_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_item_edit_quatity_and_price_ll"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="@dimen/dimen_16dp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                tools:text="12000 AFs"
                app:saleItemTotal="@{saleItem}"
                />

            <TextView
                android:id="@+id/fragment_sale_item_edit_total_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_item_edit_total_value_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="@dimen/dimen_8dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:text="@string/total"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_sale_item_edit_delivery_date_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_item_edit_total_title_tv"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:hint="@string/delivery_deadline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_sale_item_edit_delivery_date_tiet"
                    android:inputType="@{InputType.TYPE_NULL}"
                    app:dateLong="@={saleItem.saleItemDueDate}"
                    app:runOnClickWhenFocused="@{true}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>
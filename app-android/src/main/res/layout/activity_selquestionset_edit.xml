<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="selquestionset"
            type="com.ustadmobile.lib.db.entities.SelQuestionSet" />

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="fieldsEnabled"
            type="boolean" />

        <variable
            name="activityEventHandler"
            type="com.ustadmobile.port.android.view.SelQuestionSetEditActivityEventHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_selquestionset_edit_cl"
        tools:context="com.ustadmobile.port.android.view.SelQuestionSetEditActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/activity_selquestionset_edit_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_selquestionset_edit_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/primary"
                app:layout_scrollFlags="scroll|enterAlways" />

            <ProgressBar
                android:visibility="@{loading ? View.VISIBLE : View.GONE}"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:id="@+id/activity_selquestionset_edit_progressbar"
                android:layout_height="@dimen/dimen_4dp" />

        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:id="@+id/activity_selquestionset_edit_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_selquestionset_edit_appbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_clazz_edit_edit_clx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!--  actual view for editing SelQuestionSet here using two-way data binding -->
                <!-- Available templates:
                onetomanyrecyclerview: Adds a header, add new button, and a recycler view for one-many fields
                -->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_selquestionset_edit_title_til"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Question Set A"
                        android:text="@={selquestionset.title}"
                        android:hint="@string/title" />
                </com.google.android.material.textfield.TextInputLayout>
                
                <TextView
                    android:id="@+id/activity_selquestion_recycleradapter_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/form_margin_horizontal_heading"
                    android:layout_marginTop="@dimen/formitem_margin_vertical"
                    android:layout_marginBottom="@dimen/formitem_margin_vertical"
                    android:text="@string/questions"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_selquestionset_edit_title_til" />
                
                <include layout="@layout/item_createnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:onClickNew="@{() -> activityEventHandler.onClickNewSelQuestion()}"
                app:createNewText="@{@string/add_a(@string/question)}"
                app:layout_constraintTop_toBottomOf="@+id/activity_selquestion_recycleradapter_heading"
                app:layout_constraintStart_toStartOf="parent"
                />
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_selquestion_recycleradapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_selquestion"
                    tools:itemCount="2"
                    app:layout_constraintTop_toBottomOf="@+id/item_createnew_layout"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
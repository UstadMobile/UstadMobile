<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="selQuestion" type="com.ustadmobile.lib.db.entities.SelQuestionAndOptions" />

        <variable name="mPresenter"
            type="com.ustadmobile.core.controller.SelQuestionSetEditPresenter" />

        <variable name="mActivity"
            type="com.ustadmobile.port.android.view.SelQuestionSetEditActivityEventHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:onClick="@{() -> mActivity.onClickEditSelQuestion(selQuestion)}"
        android:layout_height="wrap_content">

        <!-- TODO: Change or remove this icon -->
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/item_selquestion_newitemicon"
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:layout_width="@dimen/list_twoline1_imagesize"
            android:layout_height="@dimen/list_twoline1_imagesize"
            android:layout_marginTop="@dimen/list_twoline1_margin_vertical"
            android:layout_marginBottom="@dimen/list_twoline1_margin_vertical"
            android:layout_marginStart="@dimen/list_twoline1_margin_horizontal"
            android:layout_marginEnd="@dimen/list_twoline1_margin_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Line 1-->
        <TextView android:id="@+id/item_selquestion_line1_text" android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_selquestion_newitemicon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/list_twoline1_margin_vertical"
            android:layout_marginBottom="@dimen/list_twoline1_margin_vertical"
            android:layout_marginEnd="@dimen/list_twoline1_margin_horizontal"
            android:textSize="@dimen/list_twoline1_textsize_line1"
            tools:text="Question A"
            android:text="@{selQuestion.selQuestion.questionText}"
            android:textColor="@color/text_primary" />

        <!-- Line 2-->
        <TextView android:id="@+id/item_selquestion_line2_text" android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/item_selquestion_line1_text"
            app:layout_constraintTop_toBottomOf="@+id/item_selquestion_line1_text"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Text type"
            android:text="Insert type"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/list_twoline1_margin_vertical" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_selquestion_secondary_menu_imageview"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_twoline1_margin_vertical"
            android:layout_marginEnd="@dimen/list_twoline1_margin_horizontal"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"
            android:contentDescription="@string/edit"
            app:onClickEditPopupMenu="@{() -> mActivity.onClickEditSelQuestion(selQuestion)}"
            app:onClickDeletePopupMenu="@{() -> mActivity.handleRemoveSelQuestion(selQuestion)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
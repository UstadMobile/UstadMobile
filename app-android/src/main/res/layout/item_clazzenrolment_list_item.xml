<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.ustadmobile.lib.db.entities.ClazzEnrolmentWithPerson"/>
        <import type="com.ustadmobile.lib.db.entities.ClazzEnrolment"/>
        <import type="android.view.View"/>
        <import type="com.ustadmobile.port.android.view.ClazzMemberListFragment"/>
        <import type="com.ustadmobile.port.android.view.ClazzMemberListFragment.ClazzEnrolmentListRecyclerAdapter"/>

        <variable
            name="clazzEnrolment"
            type="ClazzEnrolmentWithPerson" />
        <variable
            name="presenter"
            type="com.ustadmobile.core.controller.ClazzMemberListPresenter" />

        <variable
            name="selectablePagedListAdapter"
            type="ClazzEnrolmentListRecyclerAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectableViewHelper="@{selectablePagedListAdapter}"
        app:onSelectedStateChanged="@{(view) -> selectablePagedListAdapter.onItemSelectedChanged(view, clazzEnrolment)}"
        app:onSelectableItemClicked="@{() -> presenter.handleClickEntry(clazzEnrolment)}"
        android:background="@drawable/bg_listitem"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_clazzmember_newitemicon"
            app:personPicturePersonUid="@{clazzEnrolment.clazzEnrolmentPersonUid}"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_margin="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- Line 1-->
        <TextView
            android:textAppearance="@style/UmTheme.TextAppearance.Body1"
            android:id="@+id/item_clazzmember_text"
            android:text='@{clazzEnrolment.person.firstNames + " " + clazzEnrolment.person.lastName}'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dimen_64dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            tools:text="Student Name"
            />

        <!-- Line 2-->
        <androidx.appcompat.widget.AppCompatImageView
            android:visibility="@{clazzEnrolment.clazzEnrolmentRole == ClazzEnrolment.ROLE_STUDENT ? View.VISIBLE : View.GONE}"
            android:id="@+id/item_clazzmember_line2_attendance_trafficlight"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:contentDescription="@string/attendance"
            app:attendanceTint="@{clazzEnrolment.clazzEnrolmentAttendancePercentage}"
            app:layout_constraintStart_toEndOf="@id/item_clazzmember_newitemicon"
            app:layout_constraintTop_toBottomOf="@id/item_clazzmember_text"
            app:srcCompat="@drawable/ic_lens_black_24dp" />

        <TextView
            android:layout_marginTop="@dimen/dimen_4dp"
            android:textAppearance="@style/UmTheme.TextAppearance.Body2"
            android:id="@+id/item_clazzmember_line2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/attendance"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:gravity="center|start"
            android:visibility="@{clazzEnrolment.clazzEnrolmentRole == ClazzEnrolment.ROLE_STUDENT ? View.VISIBLE : View.GONE}"
            android:text="@{@string/x_percent_attended(clazzEnrolment.clazzEnrolmentAttendancePercentage * 100)}"
            app:layout_constraintStart_toEndOf="@+id/item_clazzmember_line2_attendance_trafficlight"
            app:layout_constraintTop_toBottomOf="@+id/item_clazzmember_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
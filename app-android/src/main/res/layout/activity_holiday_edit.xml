<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="holiday"
            type="com.ustadmobile.lib.db.entities.Holiday" />

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="fieldsEnabled"
            type="boolean" />

        <variable
            name="activityEventHandler"
            type="com.ustadmobile.port.android.view.HolidayEditActivityEventHandler" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_holiday_edit_cl"
        tools:context="com.ustadmobile.port.android.view.HolidayEditActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/activity_holiday_edit_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/activity_holiday_edit_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/primary"
                app:layout_scrollFlags="noScroll" />

            <ProgressBar
                android:visibility="@{loading ? View.VISIBLE : View.GONE}"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:id="@+id/activity_holiday_edit_progressbar"
                android:layout_height="@dimen/dimen_4dp"
                app:layout_scrollFlags="noScroll"
                />

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/activity_holiday_edit_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_holiday_edit_appbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_clazz_edit_edit_clx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!-- TODO: Put the actual view for editing Holiday here using two-way data binding -->
                <!-- Available templates:
                onetomanyrecyclerview: Adds a header, add new button, and a recycler view for one-many fields
                -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_holiday_edit_nametextinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="@dimen/form_margin_horizontal"
                    android:hint="@string/name"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@={holiday.holName}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_holiday_edit_startdateinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/form_margin_horizontal"
                    android:layout_marginVertical="@dimen/form_margin_vertical_itemspace"
                    app:layout_constraintTop_toBottomOf="@+id/activity_holiday_edit_nametextinput"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="@string/start_date">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        app:dateLong="@={holiday.holStartTime}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_holiday_edit_enddateinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/form_margin_horizontal"
                    android:layout_marginVertical="@dimen/form_margin_vertical_itemspace"
                    app:layout_constraintTop_toBottomOf="@+id/activity_holiday_edit_startdateinput"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="@string/end_date">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        app:dateLong="@={holiday.holEndTime}" />

                </com.google.android.material.textfield.TextInputLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
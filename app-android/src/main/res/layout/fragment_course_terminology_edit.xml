<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="courseTerminology"
            type="com.ustadmobile.lib.db.entities.CourseTerminologyWithLabel" />

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="fieldsEnabled"
            type="boolean" />


        <variable
            name="titleErrorText"
            type="String" />

        <variable
            name="teacherErrorText"
            type="String" />

        <variable
            name="studentErrorText"
            type="String" />

        <variable
            name="addTeacherErrorText"
            type="String" />

        <variable
            name="addStudentErrorText"
            type="String" />

    </data>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_course_terminology_edit_edit_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_course_terminology_edit_edit_clx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:enabled="@{fieldsEnabled}"
                android:id="@+id/fragment_course_terminology_edit_title"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:hint="@string/name"
                app:hintEnabled="true"
                app:errorEnabled="@{titleErrorText != null}"
                app:errorText="@{titleErrorText}"
                app:errorTextColor="?colorError"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- android:inputType="textCapWords" -->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_course_terminology_edit_title_text"
                    android:enabled="@{fieldsEnabled}"
                    android:text="@={courseTerminology.ctTitle}"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:textAppearance="@style/UmTheme.TextAppearance.Body1"
                android:id="@+id/fragment_course_terminology_edit_words_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:text="@string/your_words_for"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_course_terminology_edit_title" />


            <com.google.android.material.textfield.TextInputLayout
                android:enabled="@{fieldsEnabled}"
                android:id="@+id/fragment_course_terminology_edit_teacher"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:hint="@string/teacher"
                app:hintEnabled="true"
                app:errorEnabled="@{teacherErrorText != null}"
                app:errorText="@{teacherErrorText}"
                app:errorTextColor="?colorError"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_course_terminology_edit_words_label">

                <!-- android:inputType="textCapWords" -->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_course_terminology_edit_teacher_text"
                    android:enabled="@{fieldsEnabled}"
                    android:text="@={courseTerminology.label.ctTeacher}"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:enabled="@{fieldsEnabled}"
                android:id="@+id/fragment_course_terminology_edit_student"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:hint="@string/student"
                app:hintEnabled="true"
                app:errorEnabled="@{studentErrorText != null}"
                app:errorText="@{studentErrorText}"
                app:errorTextColor="?colorError"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_course_terminology_edit_teacher">

                <!-- android:inputType="textCapWords" -->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_course_terminology_edit_student_text"
                    android:enabled="@{fieldsEnabled}"
                    android:text="@={courseTerminology.label.ctStudent}"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:enabled="@{fieldsEnabled}"
                android:id="@+id/fragment_course_terminology_edit_addteacher"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:hint="@string/add_teacher"
                app:hintEnabled="true"
                app:errorEnabled="@{addTeacherErrorText != null}"
                app:errorText="@{addTeacherErrorText}"
                app:errorTextColor="?colorError"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_course_terminology_edit_student">

                <!-- android:inputType="textCapWords" -->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_course_terminology_edit_addteacher_text"
                    android:enabled="@{fieldsEnabled}"
                    android:text="@={courseTerminology.label.ctAddTeacher}"
                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:enabled="@{fieldsEnabled}"
                android:id="@+id/fragment_course_terminology_edit_addstudent"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginBottom="@dimen/dimen_8dp"
                android:hint="@string/add_student"
                app:hintEnabled="true"
                app:errorEnabled="@{addStudentErrorText != null}"
                app:errorText="@{addStudentErrorText}"
                app:errorTextColor="?colorError"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_course_terminology_edit_addteacher">

                <!-- android:inputType="textCapWords" -->
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_course_terminology_edit_addstudent_text"
                    android:enabled="@{fieldsEnabled}"
                    android:text="@={courseTerminology.label.ctAddStudent}"
                    />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="android.text.InputType" />

        <variable
            name="sale"
            type="com.ustadmobile.lib.db.entities.SaleWithCustomerAndLocation" />

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="orderTotal"
            type="Long"
            />

        <variable
            name="paymentTotal"
            type="Long" />

        <variable
            name="fieldsEnabled"
            type="boolean" />

        <variable
            name="activityEventHandler"
            type="com.ustadmobile.port.android.view.SaleEditFragmentEventHandler" />

    </data>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_sale_edit_edit_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_sale_edit_edit_clx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_sale_edit_customer_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/customer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_sale_edit_customer_tiet"
                    android:onClick="@{() -> activityEventHandler.selectCustomer()}"
                    android:text="@{sale.person.fullName()}"
                    app:runOnClickWhenFocused="@{true}"
                    android:inputType="@{InputType.TYPE_NULL}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_sale_edit_province_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_customer_til"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/province">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_sale_edit_province_tiet"
                    android:onClick="@{() -> activityEventHandler.selectLocation()}"
                    android:text="@{sale.location.locationTitle}"
                    app:runOnClickWhenFocused="@{true}"
                    android:inputType="@{InputType.TYPE_NULL}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

<!--            <TextView-->
<!--                android:id="@+id/fragment_sale_edit_title_tv"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"-->
<!--                android:text="@string/items"-->
<!--                app:layout_constraintTop_toBottomOf="@id/fragment_sale_edit_province_til"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                android:layout_marginHorizontal="32dp"-->
<!--                android:layout_marginVertical="@dimen/dimen_16dp"-->
<!--                />-->

            <LinearLayout
                android:id="@+id/fragment_sale_edit_item_titles_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:orientation="horizontal"
                android:weightSum="8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_province_til"

                >

                <TextView
                    android:id="@+id/fragment_sale_edit_items_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@string/items"
                    android:textAppearance="@style/TextAppearance.AppCompat"

                    />

                <TextView
                    android:id="@+id/fragment_sale_edit_quantity_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_weight="1"
                    android:text="@string/quantity"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"

                    />

                <TextView
                    android:id="@+id/fragment_sale_edit_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/price"
                    android:textAppearance="@style/TextAppearance.AppCompat"

                    />

                <TextView
                    android:id="@+id/fragment_sale_edit_total_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_sale_edit_saleitem_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_saleitem"
                tools:itemCount="2"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_item_titles_ll"
                app:layout_constraintStart_toStartOf="parent" />

            <include
                layout="@layout/item_createnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:id="@+id/fragment_sale_edit_saleitem_createnew"
                app:onClickNew="@{() -> activityEventHandler.addSaleItem()}"
                app:createNewText="@{@string/item}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_saleitem_rv"
                app:layout_constraintStart_toStartOf="parent" />


            <View
                android:id="@+id/hline1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_saleitem_createnew"
                app:layout_constraintStart_toStartOf="parent"
               />

            <LinearLayout
                android:id="@+id/fragment_sale_edit_total_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/dimen_8dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@+id/hline1"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_total"
                android:textAppearance="@style/UmTheme.TextAppearance.Body1"
                />

            <!-- This would have to be set programatically -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="17640"
                android:text="@{`` + orderTotal}"
                android:textAppearance="@style/UmTheme.TextAppearance.Body1"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                />

                <!--
                android:text="@={`` + orderTotal}"
                -->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_sale_edit_discount_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fragment_sale_edit_total_ll"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_total_ll">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discount"
                    android:textAppearance="@style/UmTheme.TextAppearance.Body1" />

                <EditText
                    android:id="@+id/fragment_sale_edit_discount_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="500"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:text="@={`` + sale.saleDiscount}"
                    android:inputType="number"
                    android:autofillHints="@string/discount"
                    tools:ignore="LabelFor" />

            </LinearLayout>

            <View
                android:id="@+id/hline2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_discount_ll"
                app:layout_constraintStart_toStartOf="parent"
                />

            <LinearLayout
                android:id="@+id/fragment_sale_edit_total2_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/hline2"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textAppearance="@style/UmTheme.TextAppearance.Body1"
                    />

                <!-- This would have to be set programatically -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="17140"
                    app:saleForTotalAfterDiscount="@{sale}"
                    app:totalSale="@{orderTotal}"
                    android:textAppearance="@style/UmTheme.TextAppearance.Body1"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_sale_edit_delivery_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/deliveries"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_sale_edit_total2_ll"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_sale_edit_delivery_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_saledelivery"
                tools:itemCount="2"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_delivery_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <include
                layout="@layout/item_createnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:id="@+id/fragment_sale_edit_saledelivery_rv_add"
                app:onClickNew="@{() -> activityEventHandler.addDelivery()}"
                app:createNewText="@{@string/delivery}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_delivery_rv"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/fragment_sale_edit_payment_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/payments"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_sale_edit_saledelivery_rv_add"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_sale_edit_payment_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_salepayment"
                tools:itemCount="2"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_payment_tv"
                app:layout_constraintStart_toStartOf="parent" />

            <include
                layout="@layout/item_createnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:id="@+id/fragment_sale_edit_salepayment_createnew"
                app:onClickNew="@{() -> activityEventHandler.addPayment()}"
                app:createNewText="@{@string/payment}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_payment_rv"
                app:layout_constraintStart_toStartOf="parent" />


            <LinearLayout
                android:id="@+id/fragment_sale_edit_balance_due_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_salepayment_createnew"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Body1"
                android:text = "@string/balance_due"
                />

                <!-- This will have to be set programatically -->
                <TextView
                    android:id="@+id/fragment_sale_edit_balance_due_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="16000"
                    app:balanceDueSaleWithDiscount="@{sale}"
                    app:balanceDueOrdertotal="@{orderTotal}"
                    app:balanceDuePaymentTotal="@{paymentTotal}"
                    android:textAppearance="@style/UmTheme.TextAppearance.Body1"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    />

            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_sale_edit_notes_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_marginBottom="@dimen/dimen_60dp"
                android:hint="@string/order_notes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_sale_edit_balance_due_ll">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_sale_edit_notes_tiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={sale.saleNotes}"
                    app:runOnClickWhenFocused="@{true}" />


            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>
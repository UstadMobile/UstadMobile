<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.ustadmobile.lib.db.entities.Location"/>
        <import type="com.ustadmobile.port.android.view.LocationListFragment"/>
        <import type="com.ustadmobile.port.android.view.LocationListRecyclerAdapter"/>

        <variable
            name="location"
            type="Location" />

        <variable
            name="itemListener"
            type="com.ustadmobile.core.controller.LocationListItemListener" />

        <variable
            name="selectablePagedListAdapter"
            type="LocationListRecyclerAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectableViewHelper="@{selectablePagedListAdapter}"
        app:onSelectedStateChanged="@{(view) -> selectablePagedListAdapter.onItemSelectedChanged(view, location)}"
        app:onSelectableItemClicked="@{() -> itemListener.onClickLocation(location)}"
        android:background="@drawable/bg_listitem"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_pin_24dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginVertical="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/item_location_list_icon"
            />

        <!-- Line 1-->
        <TextView
            android:id="@+id/line1_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_8dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:text="@{location.locationTitle}"
            android:textAppearance="@style/UmTheme.TextAppearance.Subtitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_location_list_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Location A" />

        <!-- Line 2-->
        <TextView
            android:id="@+id/line2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:text="@{location.locationDescription}"
            android:textAppearance="@style/UmTheme.TextAppearance.Body2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/dimen_8dp"
            app:layout_constraintStart_toStartOf="@+id/line1_text"
            app:layout_constraintTop_toBottomOf="@+id/line1_text"
            tools:text="50km west of the capital" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
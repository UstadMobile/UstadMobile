<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?android:selectableItemBackground"
    android:layout_height="wrap_content"
    android:id="@+id/item_clazzlog_log_cl">

    <TextView
        android:id="@+id/item_clazzlog_log_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_clazzlog_log_calendar_image"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_clazzlog_log_status_text_imageview"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/item_clazzlog_log_calendar_image"
        app:layout_constraintTop_toBottomOf="@+id/item_clazzlog_log_date" />

    <TextView
        android:id="@+id/item_clazzlog_log_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text=""
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/item_clazzlog_log_status_text_imageview"
        app:layout_constraintTop_toBottomOf="@+id/item_clazzlog_log_date" />

    <ImageView
        android:id="@+id/item_clazzlog_log_calendar_image"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_date_range_black_24dp"
        android:layout_marginLeft="8dp" />


    <TextView
        android:id="@+id/item_clazzlog_log_day"
        android:layout_width="19dp"
        android:layout_height="13dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="Mon"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_clazzlog_log_calendar_image"
        app:layout_constraintEnd_toEndOf="@+id/item_clazzlog_log_calendar_image"
        app:layout_constraintStart_toStartOf="@+id/item_clazzlog_log_calendar_image"
        app:layout_constraintTop_toTopOf="@+id/item_clazzlog_log_calendar_image"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_clazzlog_log_done_image"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/item_clazzlog_log_divider"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_clazzlog_log_status_text_imageview" />
</androidx.constraintlayout.widget.ConstraintLayout>



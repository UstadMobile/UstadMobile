<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="productDeets"
            type="com.ustadmobile.lib.db.entities.ProductDeliveryWithProductAndTransactions" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/item_sale_item_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/dimen_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_icon" />

        <TextView
            android:id="@+id/item_sale_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_8dp"
            android:lines="1"
            android:text="@{productDeets.productName}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="@+id/item_sale_item_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_sale_item_image"
            app:layout_constraintTop_toTopOf="@+id/item_sale_item_image"
            app:productNameWithItemCount="@{productDeets}"
            tools:text="Pink Hat (10 items)" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
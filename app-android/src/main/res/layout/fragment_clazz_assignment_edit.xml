<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="android.text.InputType" />
        <import type="android.content.Context" />
        <import type="com.ustadmobile.lib.db.entities.ClazzAssignment"/>
        <import type="com.ustadmobile.core.util.OneToManyJoinEditListener"/>
        <import type="com.ustadmobile.core.util.IdOption"/>
        <import type="com.ustadmobile.lib.db.entities.ContentEntryWithParentChildJoinAndStatusAndMostRecentContainer"/>
        <import type="com.ustadmobile.port.android.view.ext.StringExtKt"/>

        <variable
            name="clazzAssignment"
            type="ClazzAssignment" />

        <variable
            name="timeZone"
            type="String" />


        <variable
            name="startDate"
            type="long" />

        <variable
            name="startTime"
            type="long" />

        <variable
            name="deadlineDate"
            type="long" />

        <variable
            name="deadlineTime"
            type="long" />

        <variable
            name="gracePeriodDate"
            type="long" />

        <variable
            name="gracePeriodTime"
            type="long" />

        <variable
            name="caGracePeriodError"
            type="String" />

        <variable
            name="caDeadlineError"
            type="String" />
        
        <variable
            name="fileRequiredListener"
            type="android.widget.CompoundButton.OnCheckedChangeListener" />


        <variable
            name="textRequiredListener"
            type="android.widget.CompoundButton.OnCheckedChangeListener" />

        <variable
            name="caTitleError"
            type="String" />

        <variable
            name="caStartDateError"
            type="String" />

        <variable
            name="caMaxPointsError"
            type="String" />

        <variable
            name="editAfterSubmissionOptions"
            type="java.util.List&lt;IdOption&gt;"/>

        <variable
            name="fileTypeOptions"
            type="java.util.List&lt;IdOption&gt;"/>

        <variable
            name="submissionTypeOptions"
            type="java.util.List&lt;IdOption&gt;"/>

        <variable
            name="markingTypeOptions"
            type="java.util.List&lt;IdOption&gt;"/>

        <variable
            name="completionCriteriaOptions"
            type="java.util.List&lt;IdOption&gt;"/>

        <variable
            name="textLimitTypeOptions"
            type="java.util.List&lt;IdOption&gt;"/>

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="fieldsEnabled"
            type="boolean" />

        <variable
            name="gracePeriodVisibility"
            type="int" />

        <variable
            name="fileSubmissionVisibility"
            type="int" />

        <variable
            name="textSubmissionVisibility"
            type="int" />
        
    </data>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_clazz_assignment_edit_edit_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_clazz_assignment_edit_edit_clx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_52dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="@dimen/dimen_20dp"
                android:id="@+id/ca_title_input"
                app:errorEnabled="@{caTitleError != null}"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:enabled="@{fieldsEnabled}"
                android:hint="@string/title"
                app:hintEnabled="true"
                app:errorTextColor="?colorError"
                app:errorText="@{caTitleError}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="@style/UmTheme.TextAppearance.Body1"
                    android:id="@+id/ca_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="@{fieldsEnabled}"
                    android:text="@={clazzAssignment.caTitle}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_description_textinput"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:hint="@{StringExtKt.optional(context, @string/description)}"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                tools:hint="@string/description"
                android:enabled="@{fieldsEnabled}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_title_input">

                <com.google.android.material.textfield.TextInputEditText
                    android:text="@={clazzAssignment.caDescription}"
                    android:id="@+id/ca_edit_desc_text"
                    android:enabled="@{fieldsEnabled}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_start_date_textinput"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorEnabled="@{caStartDateError != null}"
                app:errorText="@{caStartDateError}"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:hint="@string/dont_show_before"
                android:hint="@{StringExtKt.optional(context, @string/dont_show_before)}"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_description_textinput"
                app:layout_constraintEnd_toStartOf="@+id/ca_start_datetime_textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ca_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="@{InputType.TYPE_NULL}"
                    app:dateTimeInMillis="@={startDate}"
                    app:timeZoneId="@{timeZone}"
                    app:dateTimeInMillisMode="@{0}"
                    app:runOnClickWhenFocused="@{true}" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_start_datetime_textinput"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintBottom_toBottomOf="@+id/ca_start_date_textinput"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/time"
                app:layout_constraintStart_toEndOf="@+id/ca_start_date_textinput"
                app:layout_constraintTop_toTopOf="@+id/ca_start_date_textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="@{InputType.TYPE_NULL}"
                    app:timeValue="@={startTime}"
                    app:runOnClickWhenFocused="@{true}" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/ca_timezone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginStart="32dp"
                android:text="@{@string/class_timezone_set(timeZone)}"
                tools:text="Class timezone: Dubai"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_start_date_textinput" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_completion_criteria"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/completion_criteria"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/ca_timezone">

                <com.ustadmobile.port.android.view.IdOptionAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectedMessageIdOption="@={clazzAssignment.caCompletionCriteria}"
                    app:messageIdOptions="@{completionCriteriaOptions}"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_max_scrore_textinput"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:hint="@string/maximum_points"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:errorEnabled="@{caMaxPointsError != null}"
                app:errorTextColor="?colorError"
                app:errorText="@{caMaxPointsError}"
                android:enabled="@{fieldsEnabled}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_completion_criteria">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ca_edit_max_score"
                    android:enabled="@{fieldsEnabled}"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:text="@={`` + clazzAssignment.caMaxPoints}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_deadline_date_textinput"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorEnabled="@{caDeadlineError != null}"
                app:errorText="@{caDeadlineError}"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:endIconMode="clear_text"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@{StringExtKt.optional(context, @string/deadline)}"
                tools:hint="@string/deadline"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_max_scrore_textinput"
                app:layout_constraintEnd_toStartOf="@+id/ca_deadline_datetime_textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ca_deadline_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="@{InputType.TYPE_NULL}"
                    app:dateTimeInMillis="@={deadlineDate}"
                    app:timeZoneId="@{timeZone}"
                    app:dateTimeInMillisMode="@{0}"
                    app:runOnClickWhenFocused="@{true}" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_deadline_datetime_textinput"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:errorEnabled="@{caDeadlineError != null}"
                app:errorText="@{caDeadlineError}"
                app:layout_constraintBottom_toBottomOf="@+id/ca_deadline_date_textinput"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/time"
                app:layout_constraintStart_toEndOf="@+id/ca_deadline_date_textinput"
                app:layout_constraintTop_toTopOf="@+id/ca_deadline_date_textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="@{InputType.TYPE_NULL}"
                    app:timeValue="@={deadlineTime}"
                    app:runOnClickWhenFocused="@{true}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_grace_date_textinput"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorEnabled="@{caGracePeriodError != null}"
                app:errorText="@{caGracePeriodError}"
                android:visibility="@{gracePeriodVisibility}"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:hint="@string/end_of_grace_period"
                app:layout_constraintTop_toBottomOf="@+id/ca_deadline_date_textinput"
                app:layout_constraintEnd_toStartOf="@+id/ca_grace_datetime_textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ca_grace_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="@{InputType.TYPE_NULL}"
                    app:dateTimeInMillis="@={gracePeriodDate}"
                    app:timeZoneId="@{timeZone}"
                    app:dateTimeInMillisMode="@{0}"
                    app:runOnClickWhenFocused="@{true}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_grace_datetime_textinput"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:errorEnabled="@{caGracePeriodError != null}"
                app:errorText="@{caGracePeriodError}"
                android:visibility="@{gracePeriodVisibility}"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintBottom_toBottomOf="@+id/ca_grace_date_textinput"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/time"
                app:layout_constraintStart_toEndOf="@+id/ca_grace_date_textinput"
                app:layout_constraintTop_toTopOf="@+id/ca_grace_date_textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="@{InputType.TYPE_NULL}"
                    app:timeValue="@={gracePeriodTime}"
                    app:runOnClickWhenFocused="@{true}" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_penalty_textinput"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:hint="@string/late_submission_penalty"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                app:suffixText="%"
                app:suffixTextAppearance="@style/UmTheme.TextAppearance.Body2"
                android:visibility="@{gracePeriodVisibility}"
                android:enabled="@{fieldsEnabled}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_grace_date_textinput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ca_edit_penalty"
                    android:enabled="@{fieldsEnabled}"
                    android:digits="0123456789"
                    android:inputType="number"
                    app:minValue="@{0}"
                    app:maxValue="@{100}"
                    android:text="@={`` + clazzAssignment.caLateSubmissionPenalty}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/ca_penalty_text_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:visibility="@{gracePeriodVisibility}"
                android:text="@{@string/penalty_label}"
                tools:text="If completed after deadline but before end of grace period"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_penalty_textinput" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_assignment_type"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/submission_type"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintTop_toBottomOf="@+id/ca_penalty_text_label">

                <com.ustadmobile.port.android.view.IdOptionAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectedMessageIdOption="@={clazzAssignment.caSubmissionType}"
                    app:messageIdOptions="@{submissionTypeOptions}"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/ca_edit_require_file_submission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:checked="@={clazzAssignment.caRequireFileSubmission}"
                android:onCheckedChanged="@{fileRequiredListener}"
                app:layout_constraintEnd_toEndOf="parent"
                tools:checked="true"
                android:text="@string/require_file_submission"
                app:layout_constraintTop_toBottomOf="@id/ca_edit_assignment_type" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_file_type"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/file_type"
                android:visibility="@{fileSubmissionVisibility}"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_require_file_submission">

                <com.ustadmobile.port.android.view.IdOptionAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectedMessageIdOption="@={clazzAssignment.caFileType}"
                    app:messageIdOptions="@{fileTypeOptions}"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_file_size_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:hint="@string/size_limit"
                android:visibility="@{fileSubmissionVisibility}"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                android:minWidth="100dp"
                android:enabled="@{fieldsEnabled}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ca_edit_number_of_files"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_file_type">

                <com.google.android.material.textfield.TextInputEditText
                    android:text="@={`` + clazzAssignment.caSizeLimit}"
                    android:id="@+id/ca_edit_file_size_limit_desc"
                    android:enabled="@{fieldsEnabled}"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_number_of_files"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:hint="@string/number_of_files"
                android:visibility="@{fileSubmissionVisibility}"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                android:minWidth="75dp"
                android:enabled="@{fieldsEnabled}"
                app:layout_constraintStart_toEndOf="@+id/ca_edit_file_size_limit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_file_type">

                <com.google.android.material.textfield.TextInputEditText
                    android:text="@={`` + clazzAssignment.caNumberOfFiles}"
                    android:id="@+id/ca_edit_number_of_files_desc"
                    android:enabled="@{fieldsEnabled}"
                    android:digits="0123456789"
                    android:inputType="number"
                    app:minValue="@{0}"
                    app:maxValue="@{100}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/ca_edit_require_text_submission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:checked="@={clazzAssignment.caRequireTextSubmission}"
                android:onCheckedChanged="@{textRequiredListener}"
                app:layout_constraintEnd_toEndOf="parent"
                tools:checked="true"
                android:text="@string/require_text_submission"
                app:layout_constraintTop_toBottomOf="@id/ca_edit_file_size_limit" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_word_limit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/limit"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:visibility="@{textSubmissionVisibility}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ca_edit_number_of_words"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_require_text_submission">

                <com.ustadmobile.port.android.view.IdOptionAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectedMessageIdOption="@={clazzAssignment.caTextLimitType}"
                    app:messageIdOptions="@{textLimitTypeOptions}"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_number_of_words"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:hint="@string/maximum"
                android:visibility="@{textSubmissionVisibility}"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintEnabled="true"
                android:minWidth="75dp"
                android:enabled="@{fieldsEnabled}"
                app:layout_constraintStart_toEndOf="@+id/ca_edit_word_limit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_require_text_submission">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ca_edit_number_of_words_desc"
                    android:text="@={`` + clazzAssignment.caTextLimit}"
                    android:enabled="@{fieldsEnabled}"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_after_submission"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_after_submission"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_word_limit">

                <com.ustadmobile.port.android.view.IdOptionAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectedMessageIdOption="@={clazzAssignment.caEditAfterSubmissionType}"
                    app:messageIdOptions="@{editAfterSubmissionOptions}"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ca_edit_marking_type"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/marked_by"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ca_edit_after_submission">

                <com.ustadmobile.port.android.view.IdOptionAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectedMessageIdOption="@={clazzAssignment.caMarkingType}"
                    app:messageIdOptions="@{markingTypeOptions}"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/ca_edit_class_comments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:checked="@={clazzAssignment.caClassCommentEnabled}"
                app:layout_constraintEnd_toEndOf="parent"
                tools:checked="true"
                android:text="@string/allow_class_comments"
                app:layout_constraintTop_toBottomOf="@id/ca_edit_marking_type" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/ca_edit_private_comments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:checked="@={clazzAssignment.caPrivateCommentsEnabled}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/allow_private_comments_from_students"
                app:layout_constraintTop_toBottomOf="@id/ca_edit_class_comments" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>
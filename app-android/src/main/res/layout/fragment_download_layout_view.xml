<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="@dimen/layout_dimen_16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:textAppearance="@style/UmTheme.TextAppearance.Body2"
        android:visibility="gone"
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        android:id="@+id/download_option_status_text"
        android:layout_width="match_parent"
        android:text="Sample text "
        android:lineSpacingExtra="@dimen/layout_dimen_4dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textAppearance="@style/UmTheme.TextAppearance.Body2"
        android:visibility="gone"
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        android:drawableStart="@drawable/icpng_error_black_24dp"
        android:drawablePadding="@dimen/layout_dimen_8dp"
        android:id="@+id/download_warning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/layout_dimen_4dp"/>

    <RelativeLayout
        android:visibility="gone"
        android:background="@drawable/bg_listitem"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/wifi_only_option_holder"
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        android:paddingTop="@dimen/layout_dimen_10dp"
        android:paddingBottom="@dimen/layout_dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/wifi_only_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAppearance="@style/UmTheme.TextAppearance.Body1"
            android:text="@string/download_wifi_only"
            android:id="@+id/wifi_only_option_label"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/layout_dimen_16dp"
            android:layout_toEndOf="@+id/wifi_only_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/use_sdcard_option_holder"
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        android:paddingTop="@dimen/layout_dimen_10dp"
        android:paddingBottom="@dimen/layout_dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/storage_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/download_calculate_holder"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/layout_dimen_16dp"
        android:paddingBottom="@dimen/layout_dimen_16dp"
        android:layout_height="wrap_content">
        <ProgressBar
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/UmTheme.TextAppearance.Caption"
            android:paddingStart="@dimen/layout_dimen_8dp"
            android:paddingEnd="@dimen/layout_dimen_8dp"
            android:text="@string/download_calculating"
            android:textColor="?colorPrimaryBackground"
            android:id="@+id/download_dialog_calculating"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        android:id="@+id/stacked_option_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            tools:text="Button 1"
            android:id="@+id/action_btn_pause_download"
            style="@style/UmTheme.StackedButton"
            />

        <Button
            tools:text="Button 2"
            android:layout_below="@+id/action_btn_pause_download"
            android:id="@+id/action_btn_cancel_download"
            style="@style/UmTheme.StackedButton"
            />

        <Button
            tools:text="Button 3"
            android:layout_below="@+id/action_btn_cancel_download"
            android:id="@+id/action_btn_continue_download"
            style="@style/UmTheme.StackedButton"
            />

    </RelativeLayout>

</LinearLayout>
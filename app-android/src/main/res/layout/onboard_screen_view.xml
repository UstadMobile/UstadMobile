<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingEnd="@dimen/dimen_20dp"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/dimen_20dp"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="@dimen/dimen_90dp"
        android:id="@+id/drawable_res"
        android:tint="?colorPrimaryDark"
        android:layout_above="@+id/heading"
        android:layout_marginBottom="@dimen/dimen_40dp"
        app:srcCompat="@drawable/downloading_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="@style/UmTheme.TextAppearance.Headline6"
        android:gravity="center"
        android:minHeight="@dimen/dimen_30dp"
        android:layout_above="@+id/sub_heading"
        android:id="@+id/heading"
        tools:text="Dummy text here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:textAppearance="@style/UmTheme.TextAppearance.Body1"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:lineSpacingExtra="@dimen/dimen_10dp"
        android:gravity="center"
        android:id="@+id/sub_heading"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        tools:text="Dummy sub text goes here"
        android:layout_height="wrap_content" />

</RelativeLayout>
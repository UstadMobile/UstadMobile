<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_content_list_swiperefreshlayout"
    android:paddingBottom="@dimen/bottom_navigation_height"
    tools:context="com.ustadmobile.staging.port.android.view.ContentListFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment_content_list_coordinationLayout"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/fragment_content_list_library_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabs"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                style="@style/TabLayoutStyleHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="@color/primary_light"
                android:background="?attr/colorPrimary"/>

        </com.google.android.material.appbar.AppBarLayout>

        <ru.dimorinny.floatingtextbutton.FloatingTextButton
            android:elevation="@dimen/dimen_4dp"
            android:layout_marginBottom="0dp"
            app:layout_anchor="@id/fragment_content_list_library_viewpager"
            android:id="@+id/fragment_content_list_download_all"
            android:layout_width="wrap_content"
            android:padding="@dimen/dimen_8dp"
            android:layout_height="wrap_content"
            app:floating_background_color="@color/accent"
            app:floating_left_icon="@drawable/ic_file_download_black_24dp"
            app:floating_title="@string/download_all"
            app:layout_anchorGravity="bottom|center"
            app:floating_title_color="@color/fab_text" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
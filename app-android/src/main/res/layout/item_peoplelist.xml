<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?android:selectableItemBackground"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_peoplelist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        android:layout_marginBottom="@dimen/layout_dimen_16dp"
        android:text=""
        android:textAppearance="@style/UmTheme.TextAppearance.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_peoplelist_imageview"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_peoplelist_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_dimen_1dp"
        android:layout_marginStart="@dimen/layout_dimen_8dp"
        android:layout_marginTop="@dimen/layout_dimen_20dp"
        android:layout_marginEnd="@dimen/layout_dimen_8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_peoplelist_imageview" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_peoplelist_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_dimen_16dp"
        android:layout_marginTop="@dimen/layout_dimen_16dp"
        android:layout_marginBottom="@dimen/layout_dimen_16dp"
        app:srcCompat="@drawable/ic_person_black_new_24dp"
        android:tint="?colorOnIconTint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
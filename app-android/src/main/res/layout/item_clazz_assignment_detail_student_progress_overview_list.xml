<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ustadmobile.lib.db.entities.ClazzAssignmentWithMetrics"/>
        <import type="com.ustadmobile.port.android.view.ClazzAssignmentDetailStudentProgressListOverviewFragment"/>
        <import type="com.ustadmobile.port.android.view.ClazzAssignmentDetailStudentProgressListRecyclerAdapter"/>

        <variable
            name="clazzAssignmentWithMetrics"
            type="ClazzAssignmentWithMetrics" />

        <variable
            name="itemListener"
            type="com.ustadmobile.core.controller.ClazzAssignmentDetailStudentProgressListItemListener" />

        <variable
            name="selectablePagedListAdapter"
            type="ClazzAssignmentDetailStudentProgressListRecyclerAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectableViewHelper="@{selectablePagedListAdapter}"
        app:onSelectedStateChanged="@{(view) -> selectablePagedListAdapter.onItemSelectedChanged(view, clazzAssignmentWithMetrics)}"
        app:onSelectableItemClicked="@{() -> itemListener.onClickClazzAssignmentWithMetrics(clazzAssignmentWithMetrics)}"
        android:background="@drawable/bg_listitem"
        >

        <!-- TODO: Change or remove this icon -->

        <!-- Line 1-->
        <TextView
            android:id="@+id/line1_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/UmTheme.TextAppearance.Subtitle1"
            />

        <!-- Line 2-->
        <TextView
            android:id="@+id/line2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/line1_text"
            app:layout_constraintTop_toBottomOf="@+id/line1_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/UmTheme.TextAppearance.Body2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
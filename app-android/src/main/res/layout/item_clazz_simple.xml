<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="java.util.List"/>
        <import type="com.ustadmobile.core.util.MessageIdOption"/>
        <variable name="clazz"
            type="com.ustadmobile.lib.db.entities.Clazz" />

        <variable name="mPresenter"
            type="com.ustadmobile.core.controller.SchoolEditPresenter" />

        <variable name="mActivity"
            type="com.ustadmobile.port.android.view.SchoolEditFragmentEventHandler" />

        <variable name="questionTypeList"
            type="List&lt;MessageIdOption&gt;"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{() -> mActivity.onClickEditClazz(clazz)}"
        android:layout_height="wrap_content">

        <!-- TODO: Change or remove this icon -->
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/item_clazz_simple_newitemicon"
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:layout_width="@dimen/list_twoline1_imagesize"
            android:layout_height="@dimen/list_twoline1_imagesize"
            android:layout_marginTop="@dimen/list_twoline1_margin_vertical"
            android:layout_marginBottom="@dimen/list_twoline1_margin_vertical"
            android:layout_marginStart="@dimen/list_twoline1_margin_horizontal"
            android:layout_marginEnd="@dimen/list_twoline1_margin_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Line 1-->
        <TextView android:id="@+id/item_clazz_simple_line1_text" android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_clazz_simple_newitemicon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/list_twoline1_margin_vertical"
            android:layout_marginBottom="@dimen/list_twoline1_margin_vertical"
            android:layout_marginEnd="@dimen/list_twoline1_margin_horizontal"
            android:textSize="@dimen/list_twoline1_textsize_line1"
            tools:text="Class A"
            android:text="@{clazz.clazzName}"
            android:textColor="@color/text_primary" />



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_clazz_simple_secondary_menu_imageview"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_twoline1_margin_vertical"
            android:layout_marginEnd="@dimen/list_twoline1_margin_horizontal"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:contentDescription="@string/delete"
            android:visibility="invisible"
            android:onClick="@{() -> mActivity.onClickDeleteClazz(clazz)}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
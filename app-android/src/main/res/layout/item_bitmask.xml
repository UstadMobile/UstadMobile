<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ustadmobile.core.model.BitmaskFlag"/>

        <variable
            name="bitmaskFlag"
            type="BitmaskFlag" />


    </data>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/item_bitmask_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/layout_dimen_16dp"
        android:layout_marginHorizontal="@dimen/layout_dimen_16dp"
        app:textMessageId="@{bitmaskFlag.messageId}"
        android:checked="@={bitmaskFlag.enabled}"
        tools:text="Message ID"/>


</layout>
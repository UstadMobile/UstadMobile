<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ustadmobile.core.controller.BitmaskEditPresenter"/>
        <import type="com.ustadmobile.core.model.BitmaskFlag"/>

        <variable
            name="bitmaskFlag"
            type="BitmaskFlag" />

        <variable
            name="mPresenter"
            type="com.ustadmobile.core.controller.BitmaskEditPresenter" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Switch
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/item_bitmask_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/list_twoline1_margin_vertical"
            android:layout_marginHorizontal="@dimen/list_twoline1_margin_horizontal"
            app:textMessageId="@{bitmaskFlag.messageId}"
            android:checked="@={bitmaskFlag.enabled}"
            tools:text="Message ID"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
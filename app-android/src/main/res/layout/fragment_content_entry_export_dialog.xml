<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.ustadmobile.port.android.view.ContentEntryExportFragmentDialog">

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_16dp"
        android:paddingBottom="@dimen/dimen_20dp"
        android:id="@+id/content_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/UmTheme.TextAppearance.Body1"
            android:textStyle="bold"
            android:padding="@dimen/dimen_16dp"
            android:id="@+id/dialog_title"
            android:text="@string/export"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAppearance="@style/UmTheme.TextAppearance.Body1"
            android:paddingEnd="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:lineSpacingExtra="@dimen/dimen_2dp"
            android:layout_below="@+id/dialog_title"
            android:id="@+id/dialog_message"
            android:text="@string/content_entry_export_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_below="@+id/dialog_message"
            android:background="@android:color/white"
            android:id="@+id/use_sdcard_option_holder"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/storage_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <ProgressBar
            android:visibility="gone"
            android:layout_below="@+id/dialog_title"
            android:layout_margin="@dimen/dimen_16dp"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:id="@+id/export_progress"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    </RelativeLayout>
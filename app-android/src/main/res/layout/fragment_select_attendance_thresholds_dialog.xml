<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <NumberPicker
        android:id="@+id/fragment_select_attendance_thresholds_dialog_number_picker_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_select_attendance_thresholds_dialog_title_low"
        android:layout_marginLeft="8dp">

    </NumberPicker>


        <NumberPicker
            android:id="@+id/fragment_select_attendance_thresholds_dialog_number_picker_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/fragment_select_attendance_thresholds_dialog_number_picker_low"
            app:layout_constraintTop_toBottomOf="@+id/fragment_select_attendance_thresholds_dialog_title_mid"
            android:layout_marginLeft="8dp">

        </NumberPicker>


        <NumberPicker
            android:id="@+id/fragment_select_attendance_thresholds_dialog_number_picker_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/fragment_select_attendance_thresholds_dialog_number_picker_medium"
            app:layout_constraintTop_toBottomOf="@+id/fragment_select_attendance_thresholds_dialog_title_high"
            android:layout_marginLeft="8dp">

        </NumberPicker>

        <TextView
            android:id="@+id/fragment_select_attendance_thresholds_dialog_title_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/low"
            android:textColor="@color/primary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/fragment_select_attendance_thresholds_dialog_title_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/mid"
            android:textColor="@color/primary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/fragment_select_attendance_thresholds_dialog_number_picker_medium"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/fragment_select_attendance_thresholds_dialog_title_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/high"
            android:textColor="@color/primary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/fragment_select_attendance_thresholds_dialog_number_picker_high"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
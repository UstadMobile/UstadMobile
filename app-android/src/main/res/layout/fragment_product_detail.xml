<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.ustadmobile.port.android.view.ProductDetailFragment"/>

        <variable
            name="product"
            type="com.ustadmobile.lib.db.entities.ProductWithInventoryCount" />

        <variable
            name="locale"
            type="String" />

        <variable
            name="fieldsEnabled"
            type="boolean" />

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="editButtonMode"
            type="com.ustadmobile.core.view.EditButtonMode"/>

        <variable
            name="fragmentEventHandler"
            type="com.ustadmobile.port.android.view.ProductDetailFragmentEventHandler" />

    </data>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_product_detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_product_edit_edit_clx"
            android:paddingBottom="@dimen/dimen_116dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_product_showcase_pictures_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:visibility="gone"
                android:layout_marginVertical="@dimen/dimen_16dp"
                tools:listitem="@layout/item_product_image"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:itemCount="3"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_product_detail_picture_imageview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_256dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_insert_photo_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:imageForeignKeyPlaceholder="@{@drawable/ic_baseline_insert_photo_24}"
                app:imageForeignKey="@{product.productUid}"
                app:imageForeignKeyAdapter="@{ProductDetailFragment.FOREIGNKEYADAPTER_PRODUCT}"
                app:imageForeignKeyAutoHide="@{false}"
                app:layout_constraintTop_toBottomOf="@+id/fragment_product_showcase_pictures_rv"

                />

            <TextView
                android:id="@+id/stock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_8dp"
                android:text="@{@string/x_in_stock(product.stock)}"
                tools:text="15 in stock"
                app:layout_constraintEnd_toEndOf="@+id/fragment_product_detail_picture_imageview"
                app:layout_constraintTop_toBottomOf="@+id/fragment_product_detail_picture_imageview" />


            <View
                android:id="@+id/hline6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="@dimen/dimen_8dp"
                app:layout_constraintTop_toBottomOf="@+id/stock_text"
                />

            <TextView
                android:id="@+id/random_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:text="@string/price"
                android:textAppearance="@style/UmTheme.TextAppearance.Body1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stock_text" />


            <TextView
                android:id="@+id/fragment_product_detail_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:text="@{`` + product.productBasePrice}"
                android:textAppearance="@style/UmTheme.TextAppearance.Headline5"
                app:layout_constraintStart_toEndOf="@+id/random_tv"
                app:layout_constraintTop_toBottomOf="@+id/stock_text"
                tools:text="800 AFS" />




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_product_detail_category_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_categorychip"
                tools:itemCount="2"
                android:orientation="horizontal"
                tools:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/fragment_product_detail_price_tv"
                />


            <View
                android:id="@+id/hline1"
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/dimen_8dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/fragment_product_detail_category_rv"
                />

            <LinearLayout
                android:id="@+id/record_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hline1">

                <LinearLayout
                    android:id="@+id/record_delivery_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:onClick="@{() -> fragmentEventHandler.handleClickRecordDelivery(product)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hline1">

                    <ImageView
                        android:id="@+id/receive_delivery_image"
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="@dimen/dimen_60dp"
                        android:layout_marginHorizontal="@dimen/dimen_40dp"
                        android:src="@drawable/ic_outline_local_shipping_24"
                      />

                    <TextView
                        android:id="@+id/receive_delivery_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_20dp"
                        android:text="@string/receive_delivery"
              />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/record_sale_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:onClick="@{() -> fragmentEventHandler.handleClickRecordSale(product)}"
                    app:layout_constraintStart_toEndOf="@+id/record_delivery_ll"
                    app:layout_constraintTop_toBottomOf="@+id/hline1">


                    <ImageView
                        android:id="@+id/record_sale_image"
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="@dimen/dimen_60dp"
                        android:layout_marginHorizontal="@dimen/dimen_40dp"
                        android:src="@drawable/ic_payment_note_cash_black_24dp" />

                    <TextView
                        android:id="@+id/record_sale_title"
                        android:layout_marginHorizontal="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/record_sale" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/hline2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/record_ll"
                />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:productDesc="@{product}"
                app:localeSet="@{locale}"
                style="@style/TextAppearance.AppCompat.Body1"
                tools:text="Description of this product"
                app:layout_constraintTop_toBottomOf="@id/hline2"
                android:layout_marginVertical="@dimen/dimen_16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                />

            <View
                android:id="@+id/hline4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/description_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


            <TextView
                android:id="@+id/stocklist_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stock"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="@dimen/dimen_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hline4"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_product_detail_stock_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_personwithinventorycount"
                tools:itemCount="2"
                app:layout_constraintTop_toBottomOf="@+id/stocklist_heading"
                />



            <View
                android:id="@+id/hline5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/fragment_product_detail_stock_rv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


            <TextView
                android:id="@+id/history_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/history"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="@dimen/dimen_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hline5"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_product_detail_history_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/dimen_64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/history_heading"
                tools:itemCount="2"
                tools:listitem="@layout/item_inventorytransactiondetail" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>
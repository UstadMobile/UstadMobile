<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="com.ustadmobile.port.android.view.CountryListFragment" />

        <variable
            name="country"
            type="com.ustadmobile.port.android.view.CountryListFragment.Country" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_listitem"
        android:onClick="@{() -> fragment.handleClickCountry(country)}"
        >

        <TextView
            android:textAppearance="@style/UmTheme.TextAppearance.Body1"
            android:id="@+id/item_timezoneentity_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginVertical="@dimen/dimen_8dp"
            tools:text="United Arab Emirates" />

    </LinearLayout>

</layout>
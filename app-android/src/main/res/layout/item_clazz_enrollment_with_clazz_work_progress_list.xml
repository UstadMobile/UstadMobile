<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.ustadmobile.lib.db.entities.ClazzEnrollmentWithClazzWorkProgress"/>
        <import type="com.ustadmobile.port.android.view.ClazzWorkDetailProgressListFragment"/>
        <import type="com.ustadmobile.port.android.view.ClazzWorkProgressListRecyclerAdapter"/>
        <import type="android.view.View"/>

        <variable
            name="clazzEnrollmentWithClazzWorkProgress"
            type="ClazzEnrollmentWithClazzWorkProgress" />
        <variable
            name="presenter"
            type="com.ustadmobile.core.controller.ClazzWorkDetailProgressListPresenter" />

        <variable
            name="selectablePagedListAdapter"
            type="ClazzWorkProgressListRecyclerAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectableViewHelper="@{selectablePagedListAdapter}"
        app:onSelectedStateChanged="@{(view) -> selectablePagedListAdapter.onItemSelectedChanged(view, clazzEnrollmentWithClazzWorkProgress)}"
        app:onSelectableItemClicked="@{() -> presenter.handleClickEntry(clazzEnrollmentWithClazzWorkProgress)}"
        android:background="@drawable/bg_listitem"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_clazzwork_progress_member_pic"
            app:personPicturePersonUid="@{clazzEnrollmentWithClazzWorkProgress.personUid}"
            tools:src="@drawable/ic_person_black_24dp"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- Line 1-->
        <TextView
            android:id="@+id/item_clazzwork_progress_member_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:text='@{clazzEnrollmentWithClazzWorkProgress.firstNames + " " + clazzEnrollmentWithClazzWorkProgress.lastName}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_clazzwork_progress_member_pic"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bob Dylan" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:visibility="@{clazzEnrollmentWithClazzWorkProgress.clazzWorkHasContent?View.VISIBLE:View.GONE}"
            android:progress="@{Math.round(clazzEnrollmentWithClazzWorkProgress.mProgress)}"
            app:layout_constraintEnd_toEndOf="@+id/item_clazzwork_progress_member_name"
            app:layout_constraintStart_toEndOf="@+id/item_clazzwork_progress_member_pic"
            app:layout_constraintTop_toBottomOf="@+id/item_clazzwork_progress_member_name" />

        <TextView
            android:id="@+id/item_person_line2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:clazzMemberWithClazzWorkAndProgress="@{clazzEnrollmentWithClazzWorkProgress}"
            app:layout_constraintEnd_toEndOf="@+id/item_clazzwork_progress_member_name"
            app:layout_constraintStart_toStartOf="@+id/item_clazzwork_progress_member_name"
            app:layout_constraintTop_toBottomOf="@+id/progressBar2"
            tools:text="Marked - Completed 100% of content" />

        <TextView
            android:id="@+id/item_person_line3_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:text="@{clazzEnrollmentWithClazzWorkProgress.mLatestPrivateComment.commentsText}"
            android:visibility="@{(clazzEnrollmentWithClazzWorkProgress.mLatestPrivateComment != null)?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_clazzwork_progress_member_name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/item_person_line2_text"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Can I ask for help from parents?" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:visibility="@{(clazzEnrollmentWithClazzWorkProgress.mLatestPrivateComment != null)?View.VISIBLE:View.GONE}"
            app:layout_constraintStart_toStartOf="@+id/item_person_line2_text"
            app:layout_constraintTop_toBottomOf="@+id/item_person_line2_text"
            app:srcCompat="@drawable/ic_baseline_comment_24"
            android:src="@drawable/ic_baseline_comment_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.ustadmobile.lib.db.entities.Product"/>
        <import type="com.ustadmobile.port.android.view.ext.StringExtKt"/>
        <import type="com.ustadmobile.port.android.view.ProductImageRecyclerAdapter"/>

        <variable
            name="product"
            type="Product" />

        <variable
            name="itemListener"
            type="com.ustadmobile.core.controller.ProductImageListener" />


        <variable
            name="selectablePagedListAdapter"
            type="ProductImageRecyclerAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_inventory_transaction_cl"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> itemListener.onClickProductPicture(product)}"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_saleproductimagescroll"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="entryWithLanguage"
            type="com.ustadmobile.lib.db.entities.ContentEntryRelatedEntryJoinWithLanguage" />

        <variable
            name="mPresenter"
            type="com.ustadmobile.core.controller.ContentEntry2DetailPresenter" />

        <variable
            name="mActivity"
            type="com.ustadmobile.port.android.view.ContentEntryDetailFragmentEventHandler" />

    </data>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{mPresenter.handleOnTranslationClicked(entryWithLanguage.en)}"
        android:textSize="15sp"/>

</layout>
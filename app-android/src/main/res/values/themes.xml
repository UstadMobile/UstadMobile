<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="UmTheme.App" parent="UmTheme.MaterialComponents"/>

    <style name="UmTheme.App.Splash" parent="UmTheme.MaterialComponents">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorSecondaryVariant">?colorPrimary</item>
        <item name="android:colorBackground">@color/onPrimaryColor</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?colorOnBackground</item>
    </style>

    <style name="UmTheme.App.OnBoarding" parent="UmTheme.MaterialComponents">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/onPrimaryColor</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/navigationBarColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>
    </style>

    <!--Shared theme for both Night and Light themes -->
    <style name="UmTheme.MaterialComponents" parent="UmTheme.MaterialComponents.Parent">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorPrimaryDark">@color/primaryVariantColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>
        <item name="colorOnSurface">@color/onSurfaceColor</item>
        <item name="colorOnError">@color/onErrorColor</item>
        <item name="colorOnSecondaryText">@color/iconTintColor</item>
        <item name="colorOnIconTint">@color/iconTintColor</item>
        <item name="colorOnTintPrimary">?colorPrimary</item>
        <item name="colorTabIndicator">@color/onPrimaryColor</item>
        <item name="colorTabText" >@color/primaryLightVariantColor</item>
        <item name="colorOnOrganisationText">@color/onSurfaceColor</item>
        <item name="colorSelectedTabText">@color/onPrimaryColor</item>
        <item name="colorPrimaryBackground">@color/primaryColor</item>
        <item name="colorPrimarySurface">@color/primaryColor</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?colorOnBackground</item>

        <!-- Material type attributes-->
        <item name="textAppearanceHeadline1">@style/UmTheme.TextAppearance.Headline1</item>
        <item name="textAppearanceHeadline2">@style/UmTheme.TextAppearance.Headline2</item>
        <item name="textAppearanceHeadline3">@style/UmTheme.TextAppearance.Headline3</item>
        <item name="textAppearanceHeadline4">@style/UmTheme.TextAppearance.Headline4</item>
        <item name="textAppearanceHeadline5">@style/UmTheme.TextAppearance.Headline5</item>
        <item name="textAppearanceHeadline6">@style/UmTheme.TextAppearance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/UmTheme.TextAppearance.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/UmTheme.TextAppearance.Subtitle2</item>
        <item name="textAppearanceBody1">@style/UmTheme.TextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/UmTheme.TextAppearance.Body2</item>
        <item name="textAppearanceButton">@style/UmTheme.TextAppearance.Button</item>
        <item name="textAppearanceCaption">@style/UmTheme.TextAppearance.Caption</item>
        <item name="textAppearanceOverline">@style/UmTheme.TextAppearance.Overline</item>

        <!--Attrs for shape-->
        <item name="shapeAppearanceSmallComponent">@style/UmTheme.ShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/UmTheme.ShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/UmTheme.ShapeAppearance.LargeComponent</item>

        <!--Attrs for component-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/UmTheme.ThemeOverlay.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/UmTheme.Widget.NavigationView</item>
        <item name="toolbarStyle">@style/UmTheme.Widget.Toolbar</item>
    </style>


    <style name="UmTheme.Widget.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
        <item name="android:paddingEnd">@dimen/dimen_10dp</item>
    </style>

    <style name="UmTheme.MaterialComponents.Parent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <!--Toolbar-->
    <style name="UmTheme.Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:elevation" >@dimen/dimen_4dp</item>
    </style>
</resources>
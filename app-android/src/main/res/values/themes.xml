<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UmTheme.App" parent="Theme.Material3.DayNight.NoActionBar"/>

    <!--
    as per : https://developer.android.com/develop/ui/views/launch/splash-screen/migrate
    -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <item name="postSplashScreenTheme">@style/UmTheme.App</item>

        <!--
        Use this version for icon only
        -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>

        <!--
        Use this version to provide a powered by (branded image) credit on pre-SDK31 devices
        -->
        <item name="android:windowBackground">@drawable/splash_brand_img</item>
    </style>

</resources>
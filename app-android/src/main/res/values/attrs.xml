<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Styles that can applied to the circular image view.-->
    <declare-styleable name="CircularImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        <attr name="fill_color" format="color" />
    </declare-styleable>

    <!--MATERIAL THEMING STARTS -->

    <attr name="colorFillColor" format="color"/>
    <attr name="colorStrokeColor" format="color"/>
    <attr name="colorTabIndicator" format="color"/>
    <attr name="colorTabText" format="color"/>
    <attr name="colorSelectedTabText" format="color"/>
    <attr name="colorPrimaryBackground" format="color"/>
    <attr name="colorOnIconTint" format="color"/>

    <!--For label view's-->
    <declare-styleable name="LabelLinkView">
        <attr name="android:text" />
        <attr name="leadingIcon" format="integer" />
        <attr name="linkUrl" format="string" />
    </declare-styleable>

    <!--For color attribute view's-->
    <declare-styleable name="ColorAttributeView">
        <attr name="android:text"/>
        <attr name="colorFillColor"/>
        <attr name="colorStrokeColor"/>
    </declare-styleable>

    <!--For color dot view's-->
    <declare-styleable name="ColorDotView">
        <attr name="colorFillColor"/>
        <attr name="colorStrokeColor"/>
    </declare-styleable>

    <!--For type attribute view's'-->
    <declare-styleable name="TypeAttributeView">
        <attr name="android:text"/>
        <attr name="previewText" format="string"/>
        <attr name="previewTextAppearance" format="reference"/>
        <attr name="previewTextColor" format="reference"/>
    </declare-styleable>

    <!--For shape attribute view's'-->
    <declare-styleable name="ShapeAttributeView">
        <attr name="android:text"/>
        <attr name="shapeSizeLetter" format="string"/>
        <attr name="shapeFillColor" format="color"/>
        <attr name="shapeStrokeColor" format="color"/>
        <attr name="shapeAppearanceAttr" format="reference"/>
    </declare-styleable>

    <!--MATERIAL THEMING ENDS -->
</resources>
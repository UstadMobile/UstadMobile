<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ExoMediaButton.Subtitle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/dimen_70dp</item>
        <item name="android:layout_height">@dimen/dimen_52dp</item>
        <item name="android:src">@drawable/ic_closed_caption_white_24dp</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/primaryColor</item>
    </style>

    <style name="selectableItemThemeBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- As per https://material.io/develop/android/components/buttons/#toggle-button - Implementing an icon-only toggle button -->
    <style name="UmTheme.Widget.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">@dimen/dimen_0dp</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="android:paddingStart">@dimen/dimen_12dp</item>
        <item name="android:paddingEnd">@dimen/dimen_12dp</item>
        <item name="android:minWidth">@dimen/dimen_48dp</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
    </style>

    <style name="UmTheme.Widget.TextButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">@dimen/dimen_0dp</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="android:paddingStart">@dimen/dimen_12dp</item>
        <item name="android:paddingEnd">@dimen/dimen_12dp</item>
        <item name="android:minWidth">@dimen/dimen_48dp</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
    </style>

   <!-- Stacked buttons-->
    <style name="UmTheme.StackedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingStart">@dimen/dimen_16dp</item>
        <item name="android:paddingEnd">@dimen/dimen_16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Bottom Sheets-->
    <style name="UmTheme.ThemeOverlay.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/UmTheme.BottomSheet.Modal.Animation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/UmTheme.Widget.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="UmTheme.Widget.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="UmTheme.Widget.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <!-- Aztec HTML Editor -->
    <style name="UmTheme.AztecTextStyle" parent="AztecTextStyle">
        <item name="textColor">@color/onBackgroundColor</item>
        <item name="bulletColor">@color/onBackgroundColor</item>
        <item name="preformatColor">@color/onBackgroundColor</item>
        <item name="bulletWidth">4dp</item>
    </style>


</resources>

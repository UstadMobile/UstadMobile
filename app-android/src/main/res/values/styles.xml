<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ExoMediaButton.Subtitle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/dimen_70dp</item>
        <item name="android:layout_height">@dimen/dimen_52dp</item>
        <item name="android:src">@drawable/ic_closed_caption_white_24dp</item>
    </style>

    <!-- As per https://material.io/develop/android/components/buttons/#toggle-button - Implementing an icon-only toggle button -->
    <style name="UmTheme.Widget.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">@dimen/dimen_0dp</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="android:paddingStart">@dimen/dimen_12dp</item>
        <item name="android:paddingEnd">@dimen/dimen_12dp</item>
        <item name="android:minWidth">@dimen/dimen_48dp</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
    </style>

    <style name="UmTheme.Widget.TextButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">@dimen/dimen_0dp</item>
        <item name="android:insetTop">@dimen/dimen_0dp</item>
        <item name="android:insetBottom">@dimen/dimen_0dp</item>
        <item name="android:paddingStart">@dimen/dimen_12dp</item>
        <item name="android:paddingEnd">@dimen/dimen_12dp</item>
        <item name="android:minWidth">@dimen/dimen_48dp</item>
        <item name="android:minHeight">@dimen/dimen_48dp</item>
    </style>


    <!-- Aztec HTML Editor -->
    <style name="UmTheme.AztecTextStyle" parent="AztecTextStyle">
        <item name="textColor">@color/onBackgroundColor</item>
        <item name="bulletColor">@color/onBackgroundColor</item>
        <item name="preformatColor">@color/onBackgroundColor</item>
        <item name="bulletWidth">4dp</item>
    </style>


</resources>

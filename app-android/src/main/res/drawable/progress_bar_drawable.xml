<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->

    <item android:id="@+id/background">
        <shape>
            <gradient
                android:startColor="?colorPrimary"
                android:centerColor="?colorPrimaryDark"
                android:centerY="1.0"
                android:endColor="?colorPrimaryDark"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@+id/progressAPI">
        <clip>
            <shape>
                <gradient
                    android:startColor="?colorSecondary"
                    android:centerColor="?colorSecondary"
                    android:centerY="1.0"
                    android:endColor="?colorSecondary"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>